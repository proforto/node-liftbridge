# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# and other sensible defaults
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# For JSON
[*.{json}]
indent_style = space
indent_size = 2

# Markdown files should not be trimmed
[*.md]
trim_trailing_whitespace = false

# Makefiles demand tab indentation (no size specified)
[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
